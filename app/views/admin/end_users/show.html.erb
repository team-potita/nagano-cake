<div class="container">
  <div class="row">
    <div class="col">
      <h3 class="my-5"><%= @end_user.full_name %>さんの会員詳細</h3>
        <div class="row">
          <div class="offset-2 col-2 mb-3">会員ID</div>
          <div class="col-8"><%= @end_user.id %></div>

          <div class="offset-2 col-2 mb-3">氏名</div>
          <div class="col-8"><%= @end_user.full_name %></div>

          <div class="offset-2 col-2 mb-3">フリガナ</div>
          <div class="col-8"><%= @end_user.full_name_kana %></div>

          <div class="offset-2 col-2 mb-3">郵便番号</div>
          <div class="col-8"><%= @end_user.postcode %></div>

          <div class="offset-2 col-2 mb-3">住所</div>
          <div class="col-8"><%= @end_user.address %></div>

          <div class="offset-2 col-2 mb-3">電話番号</div>
          <div class="col-8"><%= @end_user.tel %></div>

          <div class="offset-2 col-2 mb-3">メールアドレス</div>
          <div class="col-8"><%= @end_user.email %></div>

          <div class="offset-2 col-2 mb-3">会員ステータス</div>
          <div class="col-8">
            <% if @end_user.is_valid %>
              <span class="text-success">有効</span>
            <% else %>
              <span class="text-secondary">退会</span>
            <% end %>
          </div>
        </div>

      <div class="offset-2 col-8 mt-3">
      <%= link_to "編集する",edit_admin_end_user_path(@end_user),class:"btn btn-success mr-5" %>
      <%= link_to "注文履歴一覧を見る",admin_root_path(sort: 1),class:"btn btn-primary mx-5" %>
      </div>
    </div>
  </div>
</div>