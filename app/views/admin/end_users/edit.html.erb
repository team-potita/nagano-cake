<div class="container">
  <div class="row">
    <div class="col-8 mr-auto">
      <h3 class="my-5"><%= @end_user.full_name %> さんの会員情報編集</h3>

      <%= form_with model: @end_user,url: admin_customer_path(@customer),local: true do |f| %>
      <div class=" form-group row">
        <div class="offset-1 col-3 mb-3">会員ID</div>
        <div class="col-8"><%= @end_user.id %></div>

        <div class="offset-1 col-3 mb-4"><%= f.label :氏名 %></div>
        <div class="col-4"><%= f.text_field :last_name,class:"form-control" %></div>
        <div class="col-4"><%= f.text_field :first_name,class:"form-control" %></div>

        <div class="offset-1 col-3 mb-4"><%= f.label :フリガナ %></div>
        <div class="col-4"><%= f.text_field :last_name_kana,class:"form-control" %></div>
        <div class="col-4"><%= f.text_field :first_name_kana,class:"form-control" %></div>

        <div class="offset-1 col-3 mb-4"><%= f.label :郵便番号 %></div>
        <div class="col-4"><%= f.text_field :postcode,class:"form-control" %></div>
        <div class="col-4"></div>

        <div class="offset-1 col-3 mb-4"><%= f.label :住所 %></div>
        <div class="col-8"><%= f.text_field :address,class:"form-control" %></div>

        <div class="offset-1 col-3 mb-4"><%= f.label :電話番号 %></div>
        <div class="col-4"><%= f.text_field :tel,class:"form-control" %></div>
        <div class="col-4"></div>

        <div class="offset-1 col-3 mb-4"><%= f.label :メールアドレス %></div>
        <div class="col-8"><%= f.email_field :email,class:"form-control" %></div>

        <div class="offset-1 col-3 mb-4"><%= f.label :会員ステータス %></div>
        <div class="col-4">
          <%= f.radio_button :is_deleted,false,checked:true %>
          <%= f.label "有効",class:"mr-3" %>
          <%= f.radio_button :is_deleted,true %>
          <%= f.label "退会" %>
        </div>