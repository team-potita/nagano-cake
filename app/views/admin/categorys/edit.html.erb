<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-12">
      <h3 class="my-5">ジャンル編集</h3>
      <div class="col-12">
        <%= form_with model: @category, url: "/admin/categorys/#{@category.id}", local: true do |f| %>
  　　      <%= f.label :ジャンル名 %>
          <%= f.text_field :name, placeholder: "ジャンル名", class: "offset-1" %>
          <%= f.submit "変更を保存", class: "btn btn-success offset-1" %>
        <% end %>
      </div>
    </div>
  </div>
</div>