<div class="container my-5">
  <% if flash[:cart_item_error] %>
    <%= flash[:cart_item_error] %>
  <% end %>
 <div class="row">
  <div class="col-3 mt-4">
    <%= render 'category', category: @category %> <!--ジャンル-->
  </div>

  <div class="col-9 my-3">
  	<div class="row">

<!-- 画像 -->
	    <div class="col-5">
        <%= attachment_image_tag @item, :image, size: '50x50', format: "jpeg", fallback: 'noimage.jpg', size: '300x300', class: "rounded" %>
	    </div>

<!-- 商品名 -->
      <div class="col-5">
        <div class="row">
          <h4 class="red-border px-3 pb-1"><%= @item.name %></h4>
        </div>

<!-- 商品説明 -->
        <div class="row mt-3">
      </div>

<!-- 価格 -->
        <div class="row">
          <strong class="red-border px-3 ml-auto"><%= (@item.price * 1.1).floor %>円 (税込)</strong>
        </div>

      </div>
    </div>

<!-- 個数選択 -->
    <div class="row">
      <div class="offset-6">

        <%= form_with model: @cart_item, method: :post,local: true do |f| %>
          <%= f.number_field :quantity, min:1, placeholder: "個数選択" %><span>個</span>
          <%= f.hidden_field :item_id, :value => @item.id %>
          <%= f.submit "カートに入れる", class: "btn btn-success align-items-end" %>
    　　<% end %>

      </div>
    </div>

  </div>
</div>