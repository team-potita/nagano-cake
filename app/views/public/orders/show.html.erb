<div class="container">
  <div class ="row">
    <div class ="col-7">
      <h3>注文履歴詳細</h3>
      <table class ="table table-bordered">
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
            〒<%= @order.postcode %><br>
            <%= @order.address %><br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th>支払い方法</th>
          <td>
            <%= @order.peyment_method_i18n %>
          </td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%= @order.status_i18n %></td>
        </tr>
      </table>
    </div>
    <div class="col-5">
      <h3>請求金額</h3>
      <table class ="table table-bordered">
        <tr>
          <th>商品合計金額</th>
          <td><%= @order.total_payment-800 %></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @order.shipping_cost %></td>
        </tr>
        <tr>
          <th>ご請求額合計金額</th>
          <td><%= @order.total_payment %></td>
        </tr>
      </table>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-12">
      <h3>注文内容</h3>
       <table class="table table-bordered">
         <thead>
         <tr>
           <th>商品</th>
           <th>単価（税込み）</th>
           <th>個数</th>
           <th>小計</th>
         </tr>
         </thead>

         <tbody>
           <% @order.order_details.each do |order_detail| %>
           <tr>
           <td>
             <%= order_detail.item.name %>
           </td>
           <td><%= order_detail.price %></td>
           <td><%= order_detail.amount %></td>
           <td><%= (order_detail.price*order_detail.amount) %></td>
           </tr>
             <% end %>
         </tbody>
       </table>
    </div>
  </div>
</div>
