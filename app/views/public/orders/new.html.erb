<div class="container">
  <div class="row justify-content-start">
    <div class="col-12">
      <br>
      <h3>注文情報入力</h3>
      <br>

        <%= form_with model: @order, url: confirm_orders_path, method: :post,local: true do |f| %>
        <p class="font-weight-bold h4"><%= f.label :payment, "支払い方法" %></p>
        <%= f.radio_button :payment, '0',  checked: "checked" %>
        <%= f.label :payment, "クレジットカード" %>
        <br>
        <%= f.radio_button :payment, '1' %>
        <%= f.label :payment, "銀行振込" %>
        <br>
          <br>
          <p class="font-weight-bold h4"><%= f.label :address, "お届け先" %></p>
          <%= f.radio_button :address_option, 0, checked: "checked" %>
          <%= f.label :order_address, "ご自身の住所" %>
          <%= current_end_user.postcode %>
          <%= current_end_user.address %>
          <br>
          <%= f.radio_button :address_option, 1 %>
          <%= f.label :tyuumon_address, "登録済住所から選択" %>
          <%= f.collection_select :tyuumon_address, current_end_user.addresses, :id, :address, :include_blank => "選択してください" %>
          <br>
          <%= f.radio_button :address_option, 2 %>
          <%= f.label :address_opition, "新しいお届け先" %>
          <br>
          <%= f.label :postcode, "郵便番号" %>
          <%= f.text_field :postcode %>
          <br>
          <%= f.label :address_option, "住所" %>
          <%= f.text_field :order_address %>
          <br>
          <%= f.label :"宛名"%>
          <%= f.text_field :name %>
          <br>
        <p class="text-center"><%= f.submit "確認画面へ進む" , class:"btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>