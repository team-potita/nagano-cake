<div class="container">
  <div class="row justify-content-start">
    <div class="col-12">
      <br>
      <h3>注文情報入力</h3>
      <br>
        <tr>
        <%= form_with model: @order, method: :post,local: true do |f| %>
        <p class="font-weight-bold h4"><%= f.label :payment, "支払い方法" %></p>
        <%= f.radio_button :payment, :クレジットカード,  checked: "checked" %>
        <%= f.label :payment, "クレジットカード" %>
        <br>
        <%= f.radio_button :payment, :銀行振込 %>
        <%= f.label :payment, "銀行振込" %>
        <br>
          <br>
          <p class="font-weight-bold h4"><%= f.label :address, "お届け先" %></p>
          <%= f.radio_button :address_option, 0, checked: "checked" %>
          <%= f.label :order_address, "ご自身の住所" %>
          <%= @end_user.postcode %>
          <%= @end_user.address %>
          <br>
          <%= f.radio_button :address_option, 1 %>
          <%= f.label :order_address, "登録済住所から選択" %>
          <%= f.collection_select :order_address , current_end_user.addresses, :end_user_id, :address , :include_blank => "選択してください" %>
          <br>
          <%= f.radio_button :address_option, 2 %>
          <%= f.label :order_address, "新しいお届け先" %>
          <br>
          <%= f.label :postal_code, "郵便番号" %>
          <%= f.text_field :postal_code %>
          <br>
          <%= f.label :address_option, "住所" %>
          <%= f.text_field :order_address %>
          <br>
          <%= f.label :"宛名"%>
          <%= f.text_field :name %>
          </div>
          <br>
        </div>
        <p class="text-center"><%= f.submit "確認画面へ進む" , class:"btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>