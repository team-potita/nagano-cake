<div class ="container">
  <div class ="row">
    <div class ="col-7">
      <h2>注文履歴一覧</h2>
      <% if @orders.present? %>
      <h5 class="mt-3">注文情報確認</h5>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払い金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td>
                <%= order.created_at.strftime('%Y/%m/%d') %></td>
                <%= order.postcode %><br>
                <%= order.address %><br>
                <%= order.name %>
              </td>
              <td>
                <% order.order_datails.each do |order_datail| %>
                <%= order_datail.item.name %><br>
                <% end %>
              </td>
              <td><%= order.total_price.to_s(:delimited) %>円</td>
              <td>
                <%= link_to "表示", order_path(order), class: 'btn btn-default' %>
              </td>
            </tr>
            <% end %>
        </tbody>
      </table>
      <% else %>
      <p>注文履歴がありません</p>
      <% end %>
    </div>
  </div>
</div>