<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/"><span>Ngano Cake</span></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% elsif user_signed_in? && current_user.admin? %>
              <li><%= link_to ' 商品一覧',user_path(current_user.id),class: 'fas fa-home nav-link text-light' %></li>
              <li><%= link_to ' 会員一覧',users_path,class: 'fas fa-users nav-link text-light' %></li>
              <li><%= link_to ' 注文履歴一覧',books_path ,class: 'fas fa-book-open nav-link text-light'%></li>
              <li><%= link_to ' ジャンル一覧', destroy_user_session_path, method: :delete,class: 'fas fa-sign-out-alt nav-link text-light' %></li>
              <li><%= link_to ' ログアウト', destroy_user_session_path, method: :delete,class: 'fas fa-sign-out-alt nav-link text-light' %></li>
            <% elsif user_signed_in? && current_user.public? %>
              <li><%= link_to ' マイページ',user_path(current_user.id),class: 'fas fa-home nav-link text-light' %></li>
              <li><%= link_to ' 商品一覧',users_path,class: 'fas fa-users nav-link text-light' %></li>
              <li><%= link_to ' カート',books_path ,class: 'fas fa-book-open nav-link text-light'%></li>
              <li><%= link_to ' ログアウト', destroy_user_session_path, method: :delete,class: 'fas fa-sign-out-alt nav-link text-light' %></li>
            <% else %>
              <li><%= link_to ' About',root_path,class: 'fas fa-home nav-link text-light' %></li>
              <li><%= link_to ' 商品一覧',home_about_path,class: 'fas fa-link nav-link text-light' %></li>
              <li><%= link_to ' 新規登録', new_user_registration_path,class: 'fas fa-user-plus nav-link text-light' %></li>
              <li><%= link_to ' ログイン', new_user_session_path ,class: 'fas fa-sign-in-alt nav-link text-light'%></li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
  </header>
  <main>
    <%= yield %>
  </main>
 <footer>
  <div class='container mt-5'>
    <div class='row'>
      <div class='mx-auto'>
        <p></p>
      </div>
    </div>
  </div>
</footer>
  </body>
</html>
