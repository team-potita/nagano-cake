<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/7d6d903ecb.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>


    <header style="font-family: 'Noto Sans JP',serif;">
      <nav class="navbar navbar-expand-lg " id="navbarHeader">
        <div class="container">
          <div class="navbar navbar-dark shadow-sm">
            <div class="container d-flex justify-content-between">
              <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
            </div>
          </div>

          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">

            <% if admin_signed_in? %>
              <li class="nav-item">
                <%= link_to admin_items_path, class: 'nav-link text-light  ml-2' do %>
                商品一覧
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to admin_end_users_path, class: 'nav-link text-light  ml-2' do %>
                会員一覧
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to admin_orders_path, class: 'nav-link text-light  ml-2' do %>
                注文履歴一覧
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to admin_categorys_path, class: 'nav-link text-light  ml-2' do %>
                ジャンル一覧
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to destroy_admin_session_path, class: 'nav-link text-light  ml-2', method: :delete do %>
                ログアウト
                <% end %>
              </li>
            <% elsif end_user_signed_in? %>
              <span class="mt-2" style="color: white;">ようこそ、<%= current_end_user.last_name %>さん</span>
              <li class="nav-item">
                <%= link_to public_end_user_path, class: 'nav-link text-light  ml-2' do %>
                マイページ
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to public_items_path, class: 'nav-link text-light  ml-2' do %>
                商品一覧
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to public_cart_items_path, class: 'nav-link text-light  ml-2' do %>
                カート
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to destroy_end_user_session_path, class: 'nav-link text-light  ml-2', method: :delete do %>
                ログアウト
                <% end %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to about_path, class: 'nav-link text-light  ml-2' do %>
                About
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to public_items_path, class: 'nav-link text-light  ml-2' do %>
                商品一覧
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_end_user_registration_path, class: 'nav-link text-light  ml-2' do %>
                新規登録
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_end_user_session_path, class: 'nav-link text-light  ml-2' do %>
                ログイン
                <% end %>
              </li>
            <% end %>
          </div>
        </div>
      </nav>
    </header>

    <main>
    <%= yield %>
    </main>

    <footer class="text-white text-center">
      <div class="container">
          <div class="mx-auto">
            <p class="pt-3" style="font-size:15px;">
            </p>
            <p style="font-size:12px;">Copyright ©naganocake All Rights Reserved.</p>
          </div>
      </div>
    </footer>
  </body>
</html>